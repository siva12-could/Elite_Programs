// Kth Smallest Element in a BST

class Solution {
    static int count;
    static int res;
    public int kthSmallest(TreeNode root, int k) {
        count = 0;
        res = 0;
        inorder(root,k);
        return res;
    }
    private void inorder(TreeNode root, int k){
        if(root == null)
            return;
        
        inorder(root.left,k);
        count++;
        if(count == k){
            res = root.val;
            return;
        }
        inorder(root.right,k);
    }
}
